pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                // Checkout the source code from Git
                git 'https://github.com/DaniHNS/automated-testing.git'
            }
        }

        stage('Install Dependencies') {
            steps {
                sh 'brew install node@14'
                // Install Cypress dependencies
                sh 'npm install'
            }
        }

        stage('Run Tests') {
            steps {
                // Run Cypress tests
                sh 'npx cypress run --spec "cypress/e2e/regression.cy.js"'
            }
        }
    }
}
