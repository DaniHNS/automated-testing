pipeline {
    agent any
    stages {
        stage('Install Homebrew and Node.js') {
            steps {
                script {
                    // Set PATH environment variable to include Homebrew
                    env.PATH = "/usr/local/bin:${env.PATH}"
                    
                    // Install Node.js using Homebrew
                    sh 'brew install node@14'
                }
            }
        }
        
        stage('Build') {
            steps {
                // Checkout source code from version control (e.g., Git)
                git url: 'https://github.com/DaniHNS/automated-testing.git'
                
                // Install project dependencies
                sh 'npm install'
            }
        }
        
        stage('Run Tests') {
            steps {
                // Run Cypress tests
                sh 'npx cypress run --spec "cypress/e2e/regression.cy.js"'
            }
        }
          
    }
    post {
        // always {
        //     emailext body: 'A Test EMail', subject:  "Jenkins Build ${currentBuild.currentResult}: Job ${env.JOB_NAME}"
        // }
        always {
            mail to: "plotkin@hotelnetsolutions.de",
            subject: "Jenkins Build ${currentBuild.currentResult}: Job ${env.JOB_NAME}",
            body: "${currentBuild.currentResult}: Job ${env.JOB_NAME}\nMore Info can be found here: ${env.BUILD_URL} \n 
            <p>Jenkins build log:</p>
            <pre>${build.getLog()}</pre>"
            // attachmentsPattern: '*.csv'
        }
    }
}
