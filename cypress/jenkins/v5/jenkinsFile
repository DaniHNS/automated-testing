pipeline {
    agent any
    tools {nodejs "node"}
    stages {        
        stage('Build') {
            steps {
                // Checkout source code from version control (e.g., Git)
                git url: 'https://github.com/DaniHNS/automated-testing.git'
                // npm check
                sh 'npm -v'
                // Install project dependencies
                sh 'npm install'
            }
        }  
        stage('Run Tests') {
            steps {
                // Run Cypress tests
                // sh 'npx cypress run --spec "cypress/e2e/regression.cy.js" --headless'
                // sh 'npx cypress run "cypress/e2e/v5/regression.cy.js"'
                sh 'npx cypress run "cypress/e2e/v5/**.cy.js" --headless'
            }
        }
          
    }
    post {
        always {
            mail to: "plotkin@hotelnetsolutions.de",
            subject: "Jenkins Build ${currentBuild.currentResult}: Job ${env.JOB_NAME}",
            body: """${currentBuild.currentResult}: Job ${env.JOB_NAME}
            More Info can be found here: ${env.BUILD_URL}
            Video can be found here: http://jenkins.hns.hotelnetsolutions.de/v5
            http://jenkins.hns.hotelnetsolutions.de:8081/job/BookingE2E-V5/build?token=Gthr1_8"""
        }
    }
}
